# BiztelAI API Configuration
# Copy this file to .env and modify as needed

# Server configuration
PORT=5000
HOST=0.0.0.0
FLASK_ENV=production  # Set to 'development' for debug mode
WORKERS=4
THREADS=2
TIMEOUT=60

# Performance settings
CACHE_ENABLED=True
CACHE_TTL=3600
PARALLEL_PROCESSING=True
MAX_WORKERS=4

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Data paths
PROCESSED_DATA_PATH=output/processed_data.csv
ORIGINAL_DATA_PATH=data/BiztelAI_DS_Dataset_Mar'25.json

# API Configuration
SECRET_KEY=change_this_to_a_secure_random_string
JWT_SECRET_KEY=change_this_to_another_secure_random_string
JWT_EXPIRATION_HOURS=24

# Dataset Configuration
OUTPUT_DIR=output

# Rate Limiting
RATE_LIMIT_DEFAULT="100 per day, 10 per hour"
RATE_LIMIT_LOGIN="5 per minute"
RATE_LIMIT_REGISTER="3 per hour"
RATE_LIMIT_ANALYSIS="5 per minute" 